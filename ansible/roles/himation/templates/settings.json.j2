{
  "assets": {
    "debug": {{ himation_debug_assets | lower }},
    "distDir": "{{ himation_current_version_assets_dir }}",
    "optimize": {{ himation_optimize_assets | lower }}
  },
  "caching": {
    "gatewayUrl": "{{ himation_cache_gateway_url }}",
    "ttl": {{ himation_cache_ttl }}
  },
  "chiton": {
    "endpoint": "{{ himation_chiton_endpoint | require_value }}",
    "token": "{{ himation_chiton_token | require_value }}"
  },
  "cookies": {
    "registered": "{{ himation_cookies_registered }}"
  },
  "debug": {{ himation_allow_development | lower }},
  "emailSenderAddress": "{{ himation_email_sender_address }}",
  "emailSenderName": "{{ himation_email_sender_name }}",
  "environment": "{{ himation_environment }}",
  "errors": {
    "sentryDsn": "{{ himation_sentry_dsn }}",
    "sentryDsnPublic": "{{ himation_sentry_dsn_public }}",
    "track": {{ himation_track_errors | lower }}
  },
  {% if himation_facebook_app_id %}"facebookAppId": "{{ himation_facebook_app_id }}",{% endif %}
  "googleAnalyticsId": "{{ himation_google_analytics_id }}",
  "sendgridApiKey": "{{ himation_sendgrid_api_key }}",
  "server": {
    "debugLogging": {{ himation_use_debug_logging | lower }}
  },
  "servers": {
    "app": {
      "caCertificatePath": "{{ himation_app_server_ca_cert_path }}",
      "port": {{ himation_app_server_port }},
      "publicUrl": "{{ himation_app_server_public_url | trailing_slash_url }}"
    },
    "assets": {
      "path": "{{ himation_assets_path | trailing_slash_url }}",
      "port": {{ himation_asset_server_port }},
      "publicUrl": "{{ himation_asset_server_public_url | trailing_slash_url }}"
    }
  },
  "trackStats": {{ himation_track_stats | lower }}
}
