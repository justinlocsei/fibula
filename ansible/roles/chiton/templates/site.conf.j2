upstream {{ chiton_server_upstream_name }} {
  server {{ chiton_server_address_local }}:{{ chiton_server_port_local }} fail_timeout=0;
}

server {
  listen {{ chiton_server_address }}:{{ chiton_server_port }};
  listen {{ chiton_server_address }}:{{ chiton_server_port_https }} ssl;

  {% if chiton_server_name %}
    server_name {{ chiton_server_name }};
  {% endif %}

  ssl_certificate {{ chiton_ssl_certificate_path | require_value }};
  ssl_certificate_key {{ chiton_ssl_certificate_key_path | require_value }};

  gzip on;
  gzip_types application/javascript text/css;
  gzip_vary on;

  location {{ chiton_assets_url | trailing_slash_url }} {
    alias {{ chiton_assets_dir | trailing_slash_fs }};
    autoindex off;
  }

  try_files $uri $uri/ @{{ chiton_server_upstream_name }};
  location @{{ chiton_server_upstream_name }} {
    proxy_pass http://{{ chiton_server_upstream_name }};

    proxy_set_header Client-IP $remote_addr;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Real-IP $remote_addr;
  }

  client_max_body_size 10M;
  server_tokens off;
}
