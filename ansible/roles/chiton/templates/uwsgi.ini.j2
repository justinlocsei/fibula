[uwsgi]
chdir = {{ chiton_source_dir }}
daemonize = {{ chiton_log_path }}
env = DJANGO_SETTINGS_MODULE=chiton.settings
gid = {{ chiton_group }}
harakiri = {{ chiton_uwsgi_harakiri }}
master = true
module = chiton.wsgi:application
pidfile = {{ chiton_pidfile_path }}
processes = {{ chiton_uwsgi_processes }}
socket = {{ chiton_uwsgi_socket }}
stats = {{ chiton_uwsgi_stats }}
threads = {{ chiton_uwsgi_threads }}
thunder-lock = true
uid = {{ chiton_user }}
vacuum = true
virtualenv = {{ chiton_virtualenv_dir }}
