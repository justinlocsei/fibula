{
    "aws_advertising_access_key_id": "{{ chiton_aws_advertising_access_key_id | require_value }}",
    "aws_advertising_secret_access_key": "{{ chiton_aws_advertising_secret_access_key | require_value }}",
    "database": {
        "engine": "postgresql",
        "host": "{{ chiton_db_host }}",
        "name": "{{ chiton_db_name }}",
        "password": "{{ chiton_db_user_password }}",
        "port": {{ chiton_db_port }},
        "user": "{{ chiton_db_user_name }}"
    },
    "debug": {{ chiton_config_debug | lower }},
    "secret_key": "{{ chiton_config_secret_key | require_value }}",
    "static_root": "{{ chiton_assets_dir }}",
    "static_url": "{{ chiton_assets_url | trailing_slash_url }}",
    "use_https": {{ chiton_use_https | ternary("true", "false") }}
}
