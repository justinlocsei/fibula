#!/bin/bash

VMS=(chiton himation)

case $1 in
"chiton")
  ssh chiton@chiton-development.coveryourbasics.dev
  ;;
"himation")
  ssh himation@himation-development.coveryourbasics.dev
  ;;
*)
  echo "Usage: develop VM"
  echo
  echo "       VM: The ID of a virtual machine (${VMS[*]})"
  exit 1
  ;;
esac
